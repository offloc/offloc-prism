<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="Offloc\Router\Domain\Model\Route\Route" table="route">

        <many-to-one field="service" target-entity="Offloc\Router\Domain\Model\Service\Service">
            <join-column name="serviceKey" referenced-column-name="key" />
        </many-to-one>

        <id name="id" type="string" column="id" />

        <field name="target" type="string" />
        <field name="name" type="string" />

        <one-to-many field="headers" target-entity="Header" mapped-by="route" index-by="key" />

    </entity>

</doctrine-mapping>
